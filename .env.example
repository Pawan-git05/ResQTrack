# Core
FLASK_ENV=development
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me-jwt

# Database
# For MySQL: mysql+mysqlconnector://user:password@db:3306/resqtrack
# Using MySQL connector URI (no SQLite fallback)
DATABASE_URL=mysql+mysqlconnector://root:1234@localhost/resqtrack

# Mail
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER="ResQTrack <no-reply@resqtrack.local>"

# CORS
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# Uploads
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216

# AWS S3 (optional)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Rate Limiting (optional Redis)
RATELIMIT_STORAGE_URI=redis://redis:6379

# Logging
LOG_LEVEL=INFO
LOG_DIR=/app/logs
